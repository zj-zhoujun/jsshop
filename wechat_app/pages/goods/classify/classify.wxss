/* pages/classify.wxss */
.classify-content{
  padding-top: 195rpx;
  width: 100%;
   /* height: 990rpx;   */
  overflow: hidden; 
  position: relative;
}
.classify-content-left{
  width: 210rpx; 
  height: 100%; 
  background-color: #f7f7f7; 
  display: inline-block;
  font-size: 30rpx;
  color: #666;
   float: left; 
}
.classify-content-left view{
  height: 122rpx;
  width: 210rpx;
  line-height: 120rpx;
  text-align: center;
  border-bottom: 2rpx solid #fff;
}
.classify-content-left view:last-child{
  border-bottom: none; 
}
.classify-content-left .choose{
  background-color: #fff;
  border-left: 8rpx solid #FF3B44;
  border-bottom: none;
  color: #FF3B44;
  box-sizing: border-box;
}
.classify-content-right{
  display: inline-block;
  width: 540rpx;
  font-size: 26rpx;
  text-align: center;
  color: #666;
  height: 100%; 
  float: right;
}
.classify-content-righ .right-header{
  font-size: 32rpx;
}
.classify-content-right .right-body{
  overflow: hidden;
  /* margin-top: 30rpx; */
}
.classify-content-right .right-body view{
  width: 33.2%;
  float: left;
  margin: 30rpx 0;
}
.classify-content-right .right-body view text{
  display: block;
}
.classify-content-right .right-body view image{
  width: 120rpx;
  height: 120rpx;
}

.classify-big{
  padding-top: 120rpx;
  width: 100%;
}
.classify-big-list{
  width: 100%;
}
.classify-big-list image{
  width: 100%;
  box-sizing: border-box;
  /* height: 300rpx; */
  padding: 6rpx 30rpx;
}

.classify-small{
  padding-top: 120rpx;
  width: 100%;
}
.classify-small-list{
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.classify-small-item{
  width: 210rpx;
  /* height: 250rpx; */
  /* padding: 16rpx; */
  text-align: center;
  display: inline-block;
  box-sizing: border-box;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
}
.classify-small-item:nth-child(3n){
  margin-right: 0;
}
.classify-small-item image{
  width: 210rpx;
  height: 210rpx;
}
.classify-small-item text{
  font-size: 24rpx;
  color: #666;
  display: block;
  line-height: 1;
}
.content-body {
  overflow: hidden;
}

.every-commodity {
  padding: 20rpx 30rpx;
  margin-bottom: 2rpx;
  overflow: hidden;
  background-color: #fff;
}

.commodity-pic {
  width: 135rpx;
  height: 135rpx;
  border-radius: 6rpx;
}

.every-commodity-right {
  width: 300rpx;
  display: inline-block;
  margin-left: 20rpx;
  /* height: 240rpx; */
  float: right;
  position: relative;
}

.commodity-name {
  font-size: 26rpx;
  color: #666;
  width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  white-space: normal;
}

.preferential {
  /* height: 48rpx; */
  /* overflow: hidden; */
  line-height: 36rpx;
}

.preferential>text {
  display: inline-block;
  background-color: #FF3B44;
  color: #fff;
  font-size: 18rpx;
  margin-right: 18rpx;
  border-radius: 10rpx;
  height: 28rpx;
  line-height: 28rpx;
  padding: 0 10rpx;
}

.price-cart {
  width: 300rpx;
  overflow: hidden;
  height: 52rpx;
}

.price {
  font-size: 32rpx;
  color: #FF3B44;
}

.cart-img {
  width: 52rpx;
  height: 52rpx;
  float: right;
}

.loading {
  text-align: center;
  font-size: 28rpx;
  color: #999;
  margin: 10rpx 0;
  padding-bottom: 10rpx;
}

.lable_green {
  background-color: #009688 !important;
}

.lable_orange {
  background-color: #FFB800 !important;
}

.lable_blue {
  background-color: #1E9FFF !important
}

.promotion_off {
  background-color: #ccc !important;
  color: #fff;
  font-size: 18rpx;
  border-radius: 10rpx;
  height: 28rpx;
  line-height: 28rpx;
  padding: 0 10rpx;
}

.none-img {
  margin: 100rpx auto;
  text-align: center;
}

.none-img image {
  width: 160rpx;
  height: 160rpx;
}

.none-img text {
  display: block;
  color: #ccc;
  font-size: 28rpx;
}

.every-commodity-grid {
  width: 345rpx;
  float: left;
  box-sizing: border-box;
  border-bottom: 0;
  /* text-align: center; */
  padding: 0rpx;
  margin: 15rpx;
}

.every-commodity-grid:nth-child(even) {
  margin-right: 15rpx;
  margin-left: 0;
}

.every-commodity-grid:nth-child(odd) {
  margin-right: 30rpx;
}

.every-commodity-grid>image {
  width: 345rpx;
  height: 345rpx;
}

.every-commodity-grid .every-commodity-right {
  width: 100%;
  height: 236rpx;
  text-align: left;
  box-sizing: border-box;
  padding: 0rpx 20rpx;
}

.every-commodity-grid .commodity-name {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  min-height: 76rpx;
}

.every-commodity-grid .price-cart {
  width: 100%;
}

.every-commodity-grid .commodity-pic {}

.nav {
    height: 80rpx;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 80rpx;
    background: #f7f7f7;
    font-size: 14px;
    white-space: nowrap;
    position: fixed;
    top: 49px;
    left: 0;
    z-index: 99;
}
.nav-item {
    /* width: 20%; */
    display: inline-block;
    text-align: center;
    margin-left:3%;
}
.nav-item.active{
    color: red;
}